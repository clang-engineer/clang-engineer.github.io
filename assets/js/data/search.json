---
layout: compress
swcache: true
---

[
  {% for wiki in site.wikis %}
    {%- capture description -%}
      {% include post-description.html %}
    {%- endcapture -%}
  {
    "title": {{ wiki.title | jsonify }},
    "url": {{ wiki.url | relative_url | jsonify }},
    "categories": {{ wiki.categories | join: ', ' | jsonify }},
    "tags": {{ wiki.tags | join: ', ' | jsonify }},
    "date": "{{ wiki.date }}",
    "content": "{{ description }}"
  }{% unless forloop.last %},{% endunless %}
  {% endfor %}
]
